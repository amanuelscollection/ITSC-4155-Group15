<%- include('./partials/header.ejs') %>
<div class="container">
        <h1>Edit Item</h1>
        
        <form action="/items/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="form">
            <div class="form-group">
                <label for="title">Car Name:</label>
                <input type="text" id="title" name="title" value="<%= item.title %>" required>
            </div>

            <div class="form-group">
                <label for="brand">Brand:</label>
                <input type="text" id="brand" name="brand" value="<%= item.brand %>" required>
            </div>

            <div class="form-group">
                <label for="condition">Condition:</label>
                <select id="condition" name="condition" required>
                    <option value="New" <%= item.condition === 'New' ? 'selected' : '' %>>New</option>
                    <option value="Like New" <%= item.condition === 'Like New' ? 'selected' : '' %>>Like New</option>
                    <option value="Good" <%= item.condition === 'Good' ? 'selected' : '' %>>Good</option>
                    <option value="Fair" <%= item.condition === 'Fair' ? 'selected' : '' %>>Fair</option>
                </select>
            </div>

            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" value="<%= item.price %>" step="0.01" required>
            </div>

            <div class="form-group">
                <label for="year">Year:</label>
                <input type="number" id="year" name="year" value="<%= item.year %>" step="1" required>
            </div>

            <div class="form-group">
                <label for="totalOffers">Number of Offers:</label>
                <input type="number" id="totalOffers" name="totalOffers" value="<%= item.totalOffers %>" required>
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= item.email %>">
            </div>
            
            <div class="form-group">
                <label for="phone">Phone:</label>
                <input type="text" id="phone" name="phone" value="<%= item.phone %>">
            </div>
            
            <div class="form-group">
                <label>Preferred Contact Method:</label><br>
                <label>
                    <input type="checkbox" name="contactEmail" 
                           <%= item.contactPreference && item.contactPreference.includes('email') ? 'checked' : '' %>>
                    Email
                </label><br>
                <label>
                    <input type="checkbox" name="contactPhone" 
                           <%= item.contactPreference && item.contactPreference.includes('phone') ? 'checked' : '' %>>
                    Phone
                </label>
            </div>
           
            <div class="form-group">
                <label for="image">Upload New Image (Optional):</label>
                <input type="file" id="image" name="image">
                <p>Current Image: <img src="/images/<%= item.image %>" alt="Current image" width="100"></p>
                <small>If you don't upload a new image, the current image will be retained.</small>
            </div>

            <div class="form-group">
                <button type="submit" class="btn-submit">Update Item</button>
                <a href="/items/<%= item.id %>" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
    <%- include('./partials/footer.ejs') %>